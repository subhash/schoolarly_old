<tr id="paper_<%= paper.id%>">
    <td class="ui-state-default">
        <%= paper.subject.name %>
    </td>
	<td class="ui-state-focus">
        <%= link_to_remote  paper.students.size, :url => {:controller => 'papers', :action => 'edit_students', :id => paper} %>
    </td>
    <% if paper.teacher %>
		<%if controller.controller_name != 'teachers'%>
		    <td>
		        <%=link_to paper.teacher.name, teacher_path(paper.teacher) %>
		    </td>
		    <td class="ui-state-focus">
		      	<%= link_to_remote 'Change Teacher', :url => {:controller => 'papers', :action => 'edit_teacher', :id => paper}, :confirm => 'Are you sure?' %>
			</td>
			<td>
				<%= link_to_remote "Delete", :url => paper_url(paper), :method => :delete, :html => {:class => "ui-icon ui-icon-trash"}, :confirm => 'Are you sure?' %>
			</td>
		<%else%>
			<td>
		    	<%=link_to paper.klass.name, klass_path(paper.klass) %>
			</td>
		     <td class="ui-state-focus">
		      	<%= link_to_remote 'Remove Assignment', :url => '#', :html => {:class => "ui-icon ui-icon-trash", :title => 'Remove Assignment'}, :confirm => 'Are you sure?' %>
			</td>
		<%end%>

    <%else %>
	    <td class="ui-state-focus">
	    	<%= link_to_remote 'Allot Teacher', :url => {:controller => 'papers', :action => 'edit_teacher', :id => paper} %>
	    </td>
		<td>
			<%= link_to_remote "Delete", :url => paper_url(paper), :method => :delete, :html => {:class => "ui-icon ui-icon-trash"}, :confirm => 'Are you sure?' %>
		</td>
    <%end %>

</tr>
