<tr id="paper-<%= paper.id%>">
    <td class="left">
			<span class="icon"><%=message_to(paper)%></span>
			<!-- TODO page context --><%if active_controller == 'klasses' %>
			<span class="icon"><%= link_to_remote 'Delete', :url => paper_url(paper), :method => :delete, :html => {:title => "Remove #{paper.name}", :class => "ui-icon ui-icon-trash"}, :confirm => 'Are you sure?' if permitted_to? :delete, paper %></span>
			<%end%>
        <span><%= paper.subject.name %></span>
        <div class="detail">
            <span><%=pluralize(paper.students.size, 'students') %></span>
            <%= link_to_remote  '(Edit)', :url => {:controller => 'papers', :action => 'edit_students', :id => paper} if (permitted_to? :manage, paper and permitted_to? :update, :students) %>
        </div>
    </td>
    <td class="right">
        <span class="teacher"><%= link_to paper.teacher.name, teacher_path(paper.teacher) if paper.teacher %></span>
        <%= button_to_remote (paper.teacher ? 'Change' : 'Allot Teacher' ), :url => {:controller => 'papers', :action => 'edit_teacher', :id => paper} if (permitted_to? :manage, paper and permitted_to? :update, :teachers) %>
    </td>
</tr>
