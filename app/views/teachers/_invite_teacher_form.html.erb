<% remote_form_for teacher , :url => {:controller => 'teachers', :action => 'create', :school_id => school} do |f| %>
<%= f.error_messages %>
<p>
    <%= render :partial => 'users/invite_input', :locals => {:user => teacher.user} %>
</p>
<br />
<%= render :partial => 'user_profiles/form', :locals => {:user_profile => user_profile} %>
<br />
<p>
    <%= f.submit 'Invite' %>
</p>
<% end %>
