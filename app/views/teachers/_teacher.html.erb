<tr id="teacher-<%= teacher.id%>">
    <td class="left">
        <div>
            <%= link_to teacher.name, teacher %>
        </div>
        <div class="detail">
            <%= profile_link(teacher) %>
        </div>
        <%if teacher.school %>
        <div class="detail">
            <%= link_to teacher.school.name, teacher.school %>
        </div>
        <% end %>
    </td>
    <td class="right">
        <%if teacher.school %>
        <div class="owns">
            <%teacher.owned_klasses.each do |klass| %>
            <%= link_to klass.name + "  ", klass %>
            <%end %>
        </div>
        <div>
            <%teacher.papers.each do |paper| %>
            <span class="klass"><%= paper.klass.name %><span class="subject"><%= paper.name %></span></span>
            <%end %>
            <span><%= link_to_remote 'Add/Remove Papers', :url => {:controller => 'teachers', :action => 'edit_papers', :id => teacher}, :method => :get, :html => {:title => 'Add/Remove Papers'} %>
            </span>
        </div>
        <% else %>
        <div>
            <%= link_to_remote 'Allot to School', :url => {:controller => 'teachers', :action => 'show_add_to_school_form', :entity_class => 'Teacher', :entity_id => teacher}, :html => {:title => 'Allot to School'} %>
        </div>
        <%end %>
        <div>
            <%= link_to_remote 'Delete', :url => {:controller => active_controller, :action => 'remove_teacher',:id => teacher}, :html => {:title => 'Delete'}, :confirm => 'Are you sure?' %>
        </div>
    </td>
</tr>
