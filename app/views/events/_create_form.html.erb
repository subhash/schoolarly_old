<% semantic_remote_form_for @event, :url => {:controller => 'events', :action => 'create', :id => @event} , :before => "jQuery('#creating_events').show();", :complete => "jQuery('#creating_events').hide();" do |f| %>
<%= f.error_messages %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :start_time %>
<%= f.input :end_time %>
<% f.semantic_fields_for :event_series do |es| %>
<%= es.input :users, :as => :check_boxes, :collection => @users %>
Every <%= es.input :frequency %>
<%= es.input :period, :as => :select, :collection => @periods %>
<% end %>
<%=f.commit_button :label => 'Create' %>
<%end %>