<% semantic_remote_form_for @event_series, :url => {:controller => 'events', :action => 'create'}, :before => "Element.show('spinner');", :complete => "Element.hide('spinner');" do |f| %>
	<%= f.error_messages %>
	<% semantic_fields_for @event do |e| %>
		<%= e.calendar_date_select :start_time, :time => true, :popup => 'force', :minute_interval => 5   %>
		<%= e.calendar_date_select :end_time, :time => true, :popup => 'force', :minute_interval => 5   %>
		<% end %>
	<%= f.input :users, :as => :select, :collection => @users, :input_html => {:class => 'multiselect'} %>
	<%= f.input :title %>
	<%= f.input :description %>
	Repeats <%= select_tag :recurrence, options_for_select([['Only once', 'once'],['Every day', 'days'],['Every week', 'weeks'],['Every month', 'months']]) %>
	<%=f.commit_button :label => 'Create' %>
	<%= image_tag 'spinner.gif', :id=>'spinner', :style=>"display:none;" %>
<%end %>