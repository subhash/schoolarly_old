<% remote_form_for exam, :url => {:controller => :exams, :action => 'create', :exam_group_id => exam.exam_group_id, :entity_class => entity.class.name, :entity_id => entity, :subjects => subjects } do |f| %>
<%= f.error_messages %>
<table class="center">
    <tbody>
        <tr>
            <th>
                <%= f.label :subject %>
            </th>
            <td>
                <%= f.select(:subject_id, options_from_collection_for_select(subjects,:id,:name)) %>
            </td>
        </tr>
        <% fields_for :event do |event_form| %>
        <tr>
            <th>
                <%= event_form.label :start_time %>
            </th>
            <td>
                <%= event_form.datetime_select :start_time ,{:minute_step => 5}%>
            </td>
        </tr>
        <tr>
            <th>
                <%= event_form.label :end_time %>
            </th>
            <td>
                <%= event_form.datetime_select :end_time ,{:minute_step => 5}%>
            </td>
        </tr>
        <%end %>
        <tr>
            <th>
                <%= f.label :venue %>
            </th>
            <td>
                <%= f.text_field(:venue, :size => 27) %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :max_score %>
            </th>
            <td>
                <%= f.text_field(:max_score, :size => 27) %>
            </td>
        </tr>
        <tr>
            <th>
            <%= f.label :pass_score %>
            </label>
        </th>
        <td>
            <%= f.text_field(:pass_score, :size => 27) %>
        </td>
        </tr>
        <!-- TODO A div which displays teacher for each subject as the subject is selected !-->
    </tbody>
</table>
<div class="center">
    <%= submit_tag "Add" %>
</div>
<%end %>
