  entity = Object.const_get(params[:entity_class]).find(params[:entity_id])
  if !get_entity_exams(entity, @exam_group).empty?
    div_name = 'exam_' + params[:id].to_s
    page.remove div_name
  else
    div_name='eg_' + @exam_group.id.to_s
    page.replace(div_name, :partial => "exam_groups/exam_group", :object => @exam_group, :locals => {:options => get_show_options(entity), get_symbol_for_local(entity) => entity})
  end