if @exam_group.exams.empty?
  exams=@exam_group.exams.group_by{|e| e.exam_group}
  exams[@exam_group] = [Exam.new(:exam_group_id => @exam_group.id)]
  div_name='exam_group_' + @exam_group.id.to_s
  page.replace_html(div_name, :partial => "exams/exam_group", :locals => {:exam_group => @exam_group, :exam_collection => exams[@exam_group]})
else
  div_name = 'exam_' + params[:id].to_s
  page.replace_html(div_name, :text=> '')
end 
