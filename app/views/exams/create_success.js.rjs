page << "closeDialogs();"
page << "jQuery('.tabs').tabs('select','#exams-tab')"
div_name='exam_group_' + @exam.exam_group.id.to_s
entity=Object.const_get(params[:entity_class]).find(params[:entity_id])
if entity.exams.size == 1
  page.replace_html(div_name, :partial => "exams/exam_group", :locals => {:exam_group => @exam.exam_group, :exam_collection => [@exam], :entity => entity})
else
  page.insert_html(:bottom, div_name, :partial => 'exams/exam', :object => @exam, :locals => {:entity => entity})
end