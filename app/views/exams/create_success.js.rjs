page << "closeDialogs();"
page << "jQuery('.tabs').tabs('select','#exams-tab')"
div_name='eg_' + @exam.exam_group.id.to_s
entity=Object.const_get(params[:entity_class]).find(params[:entity_id])
if get_entity_exams(entity, @exam.exam_group).select{|exam| exam.exam_group == @exam.exam_group}.size == 1
