<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <title>Welcome to Schoolarly</title>
        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
        <%= stylesheet_link_tag  'schoolarly','my_hacks','my_layout_hacks' %>
        <%= javascript_include_tag 'prototype' %>
        <%= javascript_include_tag 'jquery' %>
        <%= include_jquery_grid_javascript %>
        <%= include_jquery_grid_css %>
        <%= javascript_include_tag :all %>
        <%= javascript_include_tag :defaults %>
        <%= javascript_include_tag 'builder' %>
        <%= javascript_include_tag 'modalbox' %>
        <%= stylesheet_link_tag 'modalbox' %>
        <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
    </head>
    <body>
        <!-- Missing: Header with home, logout etc., Footer with about, contact etc,. Flash message box, Breadcrumbs-->
        <div id="my-main">
            <div id="my-header">
                <ul>
                    <li>
                        <a href="">Home</a>
                    </li>
                    <li>
                        <a href="">Login</a>
                    </li>
                    <li>
                        <a href="">About</a>
                    </li>
                </ul>
            </div>
            <div id="my-contents">
                <div id="my-breadcrumbs">
                    <ul id="crumbs">
                        <% @breadcrumbs ||= [] %>
                        <% @breadcrumbs.each do |a| %>
                        <li>
                            <%= if(a[1]) then link_to(a[0], a[1]) else link_to(a[0],"") end %>
                        </li>
                        <% end %>
                    </ul>
                </div>
                <%= yield %>
            </div>
            <div id="my-right-bar">
                <div id="action_box">
                    <% @page_actions ||= [] %>
                    <% @page_actions.each do |action| %>
                    <div class= "button ui-state-focus center">
                        <%= link_to *action %>
                    </div>
                    <% end %>
                    <% @js_page_actions ||= [] %>
                    <% @js_page_actions.each do |action| %>
                    <% if action[:id]
                    id = action[:id]
                    else
                    id = action[:title].parameterize+"-dialog"
                    end %>
                    <div class= "button ui-state-focus center">
                        <%= link_to_function action[:title],  "Modalbox.show('#{escape_javascript(render action[:render])}', {title: '#{action[:title]}'})" %>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
