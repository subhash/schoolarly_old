%tr[assessment]
  %td.center
    %span
      = link_to_unless assessment.activities.blank?, assessment.name, edit_scores_activities_path(:ids => assessment.activities.collect(&:id))
      - unless @student
        %span.icon= link_to_remote 'Add Activity', :url => {:controller => 'activities', :action => 'new', :assessment_id => assessment}, :html => {:title => "Add activity to #{assessment.long_name}", :class => "ui-state-default ui-corner-all ui-icon ui-icon-plusthick"} unless assessment.sa?
      - unless assessment.activities.blank?
        %span.icon= link_to_remote 'Score Calculations', :url => {:controller => 'assessments', :action => 'edit', :id => assessment, :student_id => @student}, :method => :get,:html => {:title => "Score calculations for #{assessment.long_name}", :class => "ui-state-default ui-corner-all ui-icon ui-icon-wrench"} if assessment.fa?
        %div.detail.score= link_to_remote "#{assessment.calculated_score_for(@student)}/#{assessment.assessment_group.max_score}", :url => {:controller => 'assessments', :action => 'score_calculation', :id => assessment, :student_id => @student} if @student and assessment.calculated_score_for(@student)  
  %td.right   
    = render :partial => 'assessment_tools/assessment_tool', :collection => assessment.assessment_tools
