page << "closeDialogs();"
page << "jQuery('.tabs').tabs('select','#subjects-tab')"
page.replace_html 'subjects-tab', :partial => 'subjects/subjects', :object => @klass.subjects, :locals => {:klass => @klass, :teacher_subject_allotments => @teacher_subject_allotments, :entity => @klass}
page.replace_html 'add-remove-subjects-dialog', :partial => 'subjects/add_subjects_form', :locals => {:entity => @klass, :subjects => @all_subjects , :disabled => @klass.allotted_subjects}
page.replace_html 'add-exams-dialog', :partial =>'exam_groups/new', :locals => {:exam_group => ExamGroup.new(), :subjects => @klass.subjects, :klass => @klass, :exam_types => ExamType.all}
page.replace 'exams_of_'+@klass.id.to_s, :partial => 'exams/exams', :object => @klass.exams.group_by{|e| e.exam_group}, :locals => {:entity => @klass}