<div id="klass_tabs" class="tabs">
    <ul>
        <li>
            <a href="#students-tab">Students</a>
        </li>
        <li>
            <a href="#subjects-tab">Subjects</a>
        </li>
        <li>
            <a href="#exams-tab">Exams</a>
        </li>
    </ul>
	<div id="main-dialog" title="Schoolarly" class="jquery-dialog" style ="display: none;"></div>
    <div id="students-tab">
        <%= render :partial => 'students/students', :object => @students %>
    </div>
    <div id="subjects-tab">
        <%= render :partial => 'subjects/subjects', :object => @klass.subjects, :locals => {:klass => @klass, :teacher_subject_allotments => @teacher_subject_allotments} %>
    </div>
    <div id="exams-tab">
       	<%= render :partial => 'exams/exams', :object => @exams, :locals => {:entity => @klass} %>
    </div>
</div>
