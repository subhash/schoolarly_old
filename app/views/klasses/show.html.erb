<% render_actions do |add| %>
	<%  permitted_to? :update, @klass do %>
		<% add.dialog 'Add Students', :partial =>'students/add_students_form',:locals => {:entity => @klass, :students => @school.students.not_enrolled} if permitted_to? :add, :students %>
		<% add.dialog 'Add Subjects', :partial => 'papers/create_papers_form', :locals => {:klass => @klass, :subjects => Subject.find(:all)} if permitted_to? :add, :papers %>
		<% add.dialog 'Assign New Class Teacher', :partial =>'klasses/klass_teacher_form', :locals => {:klass => @klass, :teachers => @school.teachers} %>
	<% end %>
	<% add.dialog 'Post Message to ' + @klass.name, :partial => 'mails/new_form', :locals => {:users => @klass.users, :selected_users => @klass_user_ids, :message => Message.new} if permitted_to? :contact, @klass%>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name, @school %>
<% add.crumb @klass.name %>
<% end %>

<% render_tabs do |t| %>
<% t.students_tab :object => @klass.students, :locals => {:hide_header => true} %>
<% t.papers_tab :object => @klass.papers %>
<% t.exams_tab :object => @exams %>
<% end %>
