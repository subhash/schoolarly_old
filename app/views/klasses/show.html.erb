<script type="text/javascript">
    jQuery(function(){
        jQuery("#klass_tabs").tabs().addClass('ui-tabs-vertical ui-helper-clearfix');
        jQuery("#klass_tabs li").removeClass('ui-corner-top').addClass('ui-corner-left');
        jQuery("#add_subjects_dialog").dialog({
            bgiframe: true,
            height: 500,
            width: 400,
            modal: true,
            autoOpen: false
        });
    });
</script>
