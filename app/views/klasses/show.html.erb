<script type="text/javascript">
    jQuery(function(){
        jQuery("#klass_tabs").tabs();
        jQuery("#klass_tabs li");
        jQuery("#add_subjects_dialog").dialog({
            bgiframe: true,
            height: 500,
            width: 400,
            modal: true,
            autoOpen: false
        });
    });
</script>
