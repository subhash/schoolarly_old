<div id="klass_tabs">
    <ul>
        <li>
            <a href="#klass_tabs-1">Students</a>
        </li>
        <li>
            <a href="#klass_tabs-2">Subjects</a>
        </li>
        <li>
            <a href="#teachers-tab">Teachers</a>
        </li>
        <li>
            <a href="#exams-tab">Exams</a>
        </li>
    </ul>
    <div id="klass_tabs-1">
        <h2>Students in <%=@klass.name %></h2>
        <p>
            <%= render :partial => "students" %>
        </p>
    </div>
    <div id="klass_tabs-2">
        <h2>Subjects taught in <%=@klass.name %></h2>
        <p>
            <div id="subjects_list" class="sticker">
                <%=render :partial => 'klasses/subjects_list', :object => @klass_subjects %>
            </div>
            <div class="button ui-state-default center">
                <%= link_to_remote 'Add',:url => {:controller => 'klasses', :action => 'list_add_subjects', :id=>@klass} %>
            </div>
            <div id="add_subjects_dialog" title="Select subjects to add" style="display: none;">
                <div id="add_subjects_dialog_controls">
                </div>
            </div>
        </p>
    </div>
    <div id="teachers-tab">
        <table class="ui-state-default" border="1px" style="margin: auto;">
            <tr>
                <th>
                    Name:
                </th>
                <td>
                    <%= @klass.name %>
                </td>
                <th>
                    Class Teacher:
                </th>
                <td>
                    <%if @klass.class_teacher %>
                    	<%= link_to (@klass.class_teacher.user.user_profile.nil?)? @klass.class_teacher.user.email : @klass.class_teacher.user.user_profile.name, {:controller => 'user_profiles', :action => 'show', :id => @klass.class_teacher.user} %>
                    <%else %>
                    	<%= link_to 'Unassigned', '#', {:class => "cell-link"}%>
					<%end %>
                </td>
            </tr>
        </table>
        <br/>
        <br/>
		<%if !@teachers.empty? %>
        	<%=render :partial => 'teachers/teachers', :object => @teachers, :locals => {:subjects => @subjects} %>
		<%else%>
			<blockquote>No allotment done yet.</blockquote>
		<%end%>
    </div>
    <div id="exams-tab">
    </div>	
</div>

