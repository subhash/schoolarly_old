<tr id="klass-<%=klass.id%>">
    <td class="left">
        <% url = klass_path(klass) %>
        <a href="<%= url %>"><span class="level"><%= klass.level %><span class="division"><%= klass.division %></span></span></a>
    </td>
    <td class="right">        
        <p>
            <% klass.subjects.each do |subject| %>
            <span class="subject"><%= subject.name %></span>
            <% end %>
			<span><%= pluralize(klass.students.size, 'student') %>  <%= link_to 'Add more', klass %></span>
        </p>
        <%= link_to_remote 'Delete', :url => klass_url(klass), :method => :delete, :confirm => 'Are you sure?' %>
    </td>
</tr>
