page.close_dialog
if active_controller == 'students'
  page.open_tab(@student.papers.first)
  @new_papers.each do |paper|
    page.insert_object(:bottom, paper, :partial => 'papers/paper')
  end
  page.replace_action 'Add Subjects', :partial => 'papers/edit_papers_form', :locals => {:entity => @student, :papers => @student.klass.papers}
else
  page.replace_object @student, :partial => 'students/student'
end

