page.close_dialog
if active_controller == 'students'
  page.replace_tab Paper, :partial => 'papers/papers', :object => @student.papers
  page.replace_action 'Add/Remove Subjects', :partial => 'papers/edit_papers_form', :locals => {:entity => @student, :papers => @student.klass.papers}
  page.replace_tab(Exam, :partial => 'exam_groups/exam_groups', :object => @student.exam_groups, :locals => {:student => @student})
else
  page.replace_object @student, :partial => 'students/student'
end

