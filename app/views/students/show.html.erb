<% render_actions do |add| %>
<% add.dialog 'Add/Remove Subjects',:partial => 'papers/edit_papers_form', :locals => {:entity => @student, :papers => @klass.papers} if @school and @klass %>
<% add.dialog 'Assign Class',:partial => 'students/add_to_klass_form', :locals => {:student => @student} if @school and not @klass %>
<% add.dialog 'Add to school',:partial =>'schools/add_to_school_form', :locals => {:entity => @student, :schools => School.find(:all)} unless @school %>
<% add.link 'Profile', {:controller => :user_profiles, :action => (@user == current_user) ? :edit : :edit , :id => @student.user} %>
<% add.dialog 'Post Message to ' + @student.name, :partial => 'mails/new_form', :locals => {:users => [@student.user], :selected_users => [@student.user.id]} if is_messageable?(@student) %>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name, @school if @school %>
<% add.crumb @klass.name, @klass if @klass %>
<% add.crumb @student.name %>
<% end %>

<% render_tabs do |add| %>
<% add.messages_tab if current_user == @student.user %>
<% add.events_tab if current_user == @student.user %>
<% add.papers_tab :object => @student.papers if @klass %>
<% end %>
