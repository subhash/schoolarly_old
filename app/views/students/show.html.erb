<% if @klass %>
<div id="student_tabs" class="tabs">
    <ul>
        <li>
            <a href="#subjects-tab">Subjects</a>
        </li>
        <li>
            <a href="#exams-tab">Exams/Scores</a>
        </li>
    </ul>
    <div id="subjects-tab">
        <%if @current_enrollment %>
        <%= render :partial => 'subjects/subjects', :object => @current_enrollment.subjects, :locals => {:klass => @klass, :teacher_allotments => @teacher_allotments} %>
        <%end %>
    </div>
    <div id="exams-tab">
        <div id="exam-dialog" title="Exam" class="jquery-dialog" style ="display: none;"></div>
        <div id="exams">
            <%= render :partial => 'exams/exams', :object => @exams, :locals => {:entity => @student_enrollment} %>
        </div>
    </div>
</div>
<%end %>