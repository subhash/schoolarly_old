<% render_actions do |add| %>
<% add.dialog 'Add/Remove Subjects',:partial => 'papers/edit_papers_form', :locals => {:entity => @student, :papers => @klass.papers} if @school and @klass and (permitted_to? :update, @student)%>
<% add.dialog 'Assign Class',:partial => 'students/add_to_klass_form', :locals => {:student => @student} if @school and not @klass and (permitted_to? :add, @student)%>
<% add.dialog 'Add to School',:partial =>'schools/add_to_school_form', :locals => {:entity => @student, :schools => School.find(:all)} if !@school and (permitted_to? :add, @student)%>
<% add.link 'Profile', {:controller => :user_profiles, :action => :show , :id => @student.user} if permitted_to? :read, @student %>
<% add.dialog 'Post Message to ' + @student.name, :partial => 'mails/new_form', :locals => {:users => [@student.user], :selected_users => [@student.user.id]} if (permitted_to? :read, @student) %>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name, @school if @school %>
<% add.crumb @klass.name, @klass if @klass %>
<% add.crumb @student.name %>
<% end %>

<% render_tabs do |add| %>
<% add.messages_tab if current_user == @student.user %>
<% add.events_tab if current_user == @student.user %>
<% add.papers_tab :object => @student.papers if @klass %>
<% add.scores_tab :object => @scores if @klass %>
<% add.sep_tab :locals => {:scores => @scores } if @klass %>
<% end %>
