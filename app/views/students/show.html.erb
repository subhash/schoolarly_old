<% render_actions do |add| %>
<% add.dialog 'Add/Remove Subjects',:partial => 'papers/edit_papers_form', :locals => {:entity => @student, :papers => @klass.papers} if @school and @klass %>
<% add.dialog 'Assign Class',:partial => 'students/add_to_klass_form', :locals => {:student => @student} if @school and not @klass %>
<% add.dialog 'Add to school',:partial =>'students/add_to_school_form', :locals => {:student => @student, :schools => School.find(:all)} unless @school %>
<% add.link 'Profile', {:controller => :user_profiles, :action => (@user == current_user) ? :edit : :show , :id => @student.user} %>
<% add.dialog 'Post Message', :partial => 'mails/new_form', :locals => {:user => @student.user} if (current_user && @school && @school == current_user.person.school)%>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name, @school if @school %>
<% add.crumb @klass.name, @klass if @klass %>
<% add.crumb @student.name %>
<% end %>

<% render_tabs do |t| %>
<% t.papers_tab :object => @student.papers if @klass%>
<% t.exams_tab :title => 'Scores', :partial => 'exam_groups/exam_groups', :locals => {:exams => @exams, :entity => @student} if @klass %>
<% end %>
