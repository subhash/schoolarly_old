<tr id="<%= subject.id%>" class="subject">
    <td class="ui-state-default">
        <%= subject.name %>
    </td>
    <% if teacher_allotment %>
    <td>
        <% teacher = teacher_allotment.first.teacher %>
        <%if teacher.name %>
        <%=link_to teacher.name, teacher_path(teacher) %>
        <%else %>
        <%=link_to "Profile not created", {:controller => 'user_profiles', :action => 'new', :id => teacher.user}, {:class => "profile"} %>
        <%end %>
    </td>
    <td>
        <%= link_to_remote 'Delete', :url => {:controller => 'klasses', :action => 'delete_allotment',:id => klass, :subject_id => teacher_allotment.first}, :confirm => 'Are you sure?' %>
    </td>
    <%else %>
    <td class="ui-state-focus">
        <%= link_to_remote "Assign Teacher" %>
    </td>
    <%end %>
</tr>
