<h1>Listing users</h1>

<table>
  <tr>
    <th>id</th>
    <th>Email</th>
    <th>Person</th>
    <th>Person type</th>
  </tr>

<% @users.each do |user| %>
  <tr>
  	<!--<%s= 'profile_' + user.person_type + '_path(' + user.person.to_s + ')'%>!-->
    <td><%=link_to user.id, url_for({:controller => user.person_type.pluralize , :id => user.person_id, :action => :profile, :user_id => user.id})%>
	<!--url_for(:controller => user.person_type.pluralize , :id => user.id, :action => :profile)%> !--> 
    <td><%=h user.email %></td>
    <td><%=h user.person_id %></td>
    <td><%=h user.person_type %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

