<% render_actions do |add| %>
<% add.dialog 'Invite Student',:partial => 'students/invite_student_form', :locals => {:student => Student.new, :user_profile => UserProfile.new, :school => @school} if permitted_to? :create, Student.new %>
<% add.dialog 'Invite Teacher',:partial => 'teachers/invite_teacher_form', :locals => {:teacher => Teacher.new, :user_profile => UserProfile.new, :school => @school} if permitted_to? :create, Teacher.new %>
<% add.dialog 'Add Student',:partial => 'users/new_user', :locals => {:user => User.new, :user_profile => UserProfile.new, :person_type => 'Student'} if permitted_to? :create, User.new %>
<% add.dialog 'Add Teacher',:partial => 'users/new_user', :locals => {:user => User.new, :user_profile => UserProfile.new, :person_type => 'Teacher'} if permitted_to? :create, User.new %>
<% add.dialog  'Add School',:partial => 'users/new_user', :locals => {:user => User.new, :user_profile => UserProfile.new, :person_type => 'School'} if permitted_to? :create, User.new %>
<% add.dialog  'Add Schoolarly Admin',:partial => 'users/new_user', :locals => {:user => User.new, :user_profile => UserProfile.new, :person_type => 'SchoolarlyAdmin'} if permitted_to? :create, User.new %>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb 'Home' %>
<% end %>

<% render_tabs do |t| %>
<% t.tab :title => 'Schools', :partial => 'schools/schools', :object => @schools %>
<% t.students_tab %>
<% t.teachers_tab %>
<% t.tab :tab => :schoolarlyadmins, :title => 'Schoolarly Admin', :partial => 'schoolarly_admins/schoolarly_admins', :object => @schoolarly_admins %>
<% end %>
