<% form_for @user_profile, :url => {:controller => :schools, :action => :profile_create, :method => :post, :id => @school} do |profile_form| %>
  <%= profile_form.error_messages %>
<div class="c38l">
    <table>
	<%= render :partial => "/user" %>
		<%= render :partial => "/profile", :object => profile_form %>
    </table>
</div>
<div class="c38r">
    <table>
    	<% fields_for @school do |school_form| %>
		<tr>
            <td>
                <b><%= school_form.label :name %>:</b>
            </td>
            <td>
				<%= school_form.text_field :name%>
            </td>
        </tr>
        <tr>
            <td>
            	<b><%= school_form.label :board %>:</b>
            </td>
            <td>
				<%= school_form.text_field :board%>				
            </td>
        </tr>
        <tr>
            <td>
                <b><%= school_form.label :fax %>:</b>
            </td>
            <td>
                <%= school_form.text_field :fax%>
            </td>
        </tr>
        <tr>
            <td>
                <b><%= school_form.label :website %>:</b>
            </td>
            <td>
                <%= school_form.text_field :website%>
            </td>
        </tr>
		<%end%>
    </table>
</div>
<div class="c38r">
    <p class="icaption_right">
        <br/>
		<%= link_to_function( 'Submit' , "document.forms['new_user_profile'].submit()")%>
        <% end %>
    </p>
</div>

