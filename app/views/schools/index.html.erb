<h1>Listing schools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Board</th>
    <th>Fax</th>
    <th>Website</th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%=h school.name %></td>
    <td><%=h school.board %></td>
    <td><%=h school.fax %></td>
    <td><%=h school.website %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New school', new_school_path %>