<h3 class="ui-widget-header">New student</h3>
<% remote_form_for @user , :url => {:controller => 'schools', :action => 'create_student', :school_id => @school},:html => {:class => "yform"} do |f| %>
<%= f.error_messages %>
<%= f.label :email %>
<%= text_field_with_auto_complete :user, :email, {:value => nil, :size => 40}, {:tokens => ',', :url => {:controller => 'schools', :action => 'auto_complete_for_student_email'}} %>
<%= label_tag :admission_number %>
<%= text_field_tag :admission_number %>
<%= button_to_remote "Add student", {:url => {:controller => 'schools', :action => 'add_student',  :school_id => @school},:with => "'email='+user_email.value+'&admission_number='+admission_number.value"}, {:id => "add_student_button"} %>
<div id="password" style="display: none">
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit 'Create' %>
    <br/>
</div>
<% end %>
<%= link_to 'Back', school_path(@school) %>