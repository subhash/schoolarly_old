    <%if !@exams.nil? && !@exams.empty?%>
		<h3>Listing exams under <%=@exam_group.description %></h3>
		<table>
			<tr>
		    	<th>Subject</th><th>Start Time</th><th>End Time</th><th>Venue</th><th>Max Score</th><th>Pass Score</th></tr>
		    <tr>
			<%@exams.each do |exam|%> 
		            <td>
		                <%=h exam.subject.name%>
		            </td>
		            <td>
		                <%=h exam.start_time%>
		            </td>
		            <td>
		                <%=h exam.end_time%>
		            </td>
		            <td>
		                <%=h exam.venue%>
		            </td>
					<td>
		                <%=h exam.max_score%>
		            </td>
					<td>
		                <%=h exam.pass_score%>
		            </td>
		        </tr>
		   	<%end%>
		 </table>	
	

		<div class="button ui-state-default ui-corner-all float_left">
        <%= link_to_remote 'Edit', :url => {:controller => :schools, :action => 'exam_group_edit', :id=>@exam_group} %>
		</div>
	<%else%> 
	<br />
		<blockquote>
	    	No exam added yet
		</blockquote>
	<%end%>

	<div class="button ui-state-default ui-corner-all float_left">
    <div id="button_add_exam">
        <%= link_to_remote 'Add Exam', :url => {:controller => :schools, :action => 'add_exam_dialog_show', :id=>@exam_group} %>
    </div>
</div>

<div id="dialog_add_exam" title="Add Exam Details" style="display: none;">
    <div id="add_exam">
<br />

        <fieldset align=center>
			<table class="center">
            <tr>
            	<th><label for="subject">Subject</label></th>
                <td><%= text_field_tag(:subject, "" ,:size => 36)%></td>
            </tr>
            <tr>
           		<th><label for="start_time">Start Time</label></th>
                <td><%= text_field_tag(:start_time, "", :size => 36)%></td>
            </tr>
            <tr>
            	<th><label for="end_time">End Time</label></th>
                <td><%= text_field_tag(:end_time, "", :size => 36)%></td>
            </tr>
            <tr>
            	<th><label for="venue">Venue</label></th>
                <td><%= text_field_tag(:venue, "", :size => 36)%></td>
            </tr>
			<tr>
            	<th><label for="max_score">Max Score</label></th>
                <td><%= text_field_tag(:max_score, "", :size => 36)%></td>
            </tr>
			<tr>
            	<th><label for="pass_score">Pass Score</label></th>
                <td><%= text_field_tag(:pass_score, "", :size => 36)%></td>
            </tr>
			</table>
                <%=link_to_remote 'Add', :url => {:controller => 'schools', :action => 'add_exam', :id=>@exam_group}, :with => "'subject=' + $('subject').value + '&start_time=' + $('start_time').value + '&end_time=' + $('end_time').value + '&venue=' + $('venue').value + '&max_score=' + $('max_score').value + '&pass_score=' + $('pass_score').value" %>
        </fieldset>
		
    </div>
</div>
