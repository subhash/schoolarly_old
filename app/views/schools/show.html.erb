<% render_actions do |add| %>
<% add.dialog 'Add class',:partial => 'klasses/new_klass_form', :locals => {:klass => Klass.new, :school => @school} %>
<% add.dialog 'Invite Student',:partial => 'students/invite_student_form', :locals => {:student => Student.new, :user_profile => UserProfile.new, :school => @school} %>
<% add.dialog 'Invite Teacher',:partial => 'teachers/invite_teacher_form', :locals => {:teacher => Teacher.new, :user_profile => UserProfile.new, :school => @school} %>
<% add.link 'Profile', {:controller => :user_profiles, :action => (@user == current_user) ? :edit : :show , :id => @school.user} %>
<% add.dialog 'Post Message to ' + @school.name, :partial => 'mails/new_form', :locals => {:user => @school.user} if (current_user && @school && @school == current_user.person.school) %>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name %>
<% end %>

<% render_tabs do |add| %>
<% add.klasses_tab %>
<% add.students_tab %>
<% add.teachers_tab %>
<% add.exams_tab :partial => 'exam_groups/klass_exam_groups', :locals => {:entity => @school, :exams => @exams} %>
<% end %>