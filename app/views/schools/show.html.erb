<% render_actions do |add| %>
	<% permitted_to? :update, @school do %>
		<% add.dialog 'Add Class',:partial => 'klasses/new_klass_form', :locals => {:klass => Klass.new, :school => @school, :levels => Level.all} if permitted_to? :create, :klasses %>
		<% add.dialog 'Invite Student',:partial => 'students/invite_student_form', :locals => {:student => Student.new, :user_profile => UserProfile.new, :school => @school} if permitted_to? :create, :students %>
		<% add.dialog 'Invite Teacher',:partial => 'teachers/invite_teacher_form', :locals => {:teacher => Teacher.new, :user_profile => UserProfile.new, :school => @school} if permitted_to? :create, :teachers %>
  	<%end%>
	<% add.link 'Profile', {:controller => :user_profiles, :action => :show , :id => @school.user} if permitted_to? :read, @school %>
	<% add.dialog 'Post Message to ' + @school.name + ' Admin', :partial => 'mails/new_form', :locals => {:users => [@school.user], :selected_users => [@school.user.id]} if permitted_to? :contact, @school%>
	<% add.dialog 'Post Message to ' + @school.name, :partial => 'mails/new_form', :locals => {:users => @school.users, :selected_users => @school_user_ids} if permitted_to? :contact, @school%>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name %>
<% end %>

<% render_tabs do |add| %>
<% add.messages_tab if current_user == @school.user %>
<% add.events_tab if current_user == @school.user %>
<% add.klasses_tab %>
<% add.students_tab %>
<% add.teachers_tab %>
<% end %>