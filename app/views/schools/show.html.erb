<% render_actions do |add| %>
<% add.link  'Edit Profile', {:controller => :user_profiles, :action => 'edit', :id => @school.user} %>
<% add.dialog 'Add class',:partial => 'klasses/new_klass_form', :locals => {:klass => Klass.new, :school => @school} %>
<% add.dialog 'Invite Student',:partial => 'students/invite_student_form', :locals => {:student => Student.new, :school => @school} %>
<% add.dialog 'Invite Teacher',:partial => 'teachers/invite_teacher_form', :locals => {:teacher => Teacher.new, :school => @school} %>
<% add.dialog 'Compose Message', :partial => 'conversations/new_form', :locals => {:users => @users.flatten, :mail => Mail.new()} if @users %>
<% end %>

<% render_breadcrumbs do |add| %>
<% add.crumb @school.name %>
<% end %>

<% render_tabs do |add| %>
<% add.tab :title => 'Home', :partial => '/home', :locals => {:user => @school.user} %>
<% add.klasses_tab %>
<% add.students_tab %>
<% add.teachers_tab %>
<% add.exams_tab :partial => 'exam_groups/klass_exam_groups', :locals => {:entity => @school, :exams => @exams} %>
<% end %>