<% subjects = subjects_list
if subjects && !(subjects.empty?) %>
<ol class = "sticker ui-state-default">
    <%subjects.each do |subject| %>
    <%= link_to_remote "Delete" , {:url => {:controller => 'schools', :action => 'delete_subject', :id=>@school, :subject_id => subject}},
    {:id => "#{subject.id}_delete", :class => "delete ui-icon ui-icon-circle-close", :style => "display: none;" } %>
    <li id=<%="#{@school.id}_#{subject.id}" %>
 class="ui-widget-content">
        <%= link_to_function subject.name do |page|
        page.select("#school_subjects_list .delete").each do |item|
        item.hide
        end
        page["#{subject.id}_delete"].show
        end %>
    </li>
    <%end %>
</ol>
<%else %>
<blockquote>
    No subjects are assigned to the school. Add subjects to proceed!
</blockquote>
<%end %>