- render_breadcrumbs do |add|
  - add.crumb @activity.klass.school.name, @activity.klass.school
  - add.crumb @activity.klass.name, @activity.klass
  - add.crumb @activity.title
- render_tabs do |t|
  - t.tab :title => 'Scores', :partial => 'scores/edit', :locals => {:activities => [@activity], :edit => @edit}
  - t.tab :title => 'Details', :partial => 'activities/activity', :collection => [@activity]
