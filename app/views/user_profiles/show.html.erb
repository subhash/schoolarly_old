<% render_breadcrumbs do |add| %>
<% add.crumb_for @person %>
<% add.crumb 'Profile' %>
<% end %>

<% render_tabs do |t| %>
<% t.profile_tab :object => @user_profile %>
<% end %>

<% render_actions do |add| %>
<% add.dialog 'Change Password', :partial => 'user_profiles/change_password_form', :locals => {:user => @user} if permitted_to? :manage, @user_profile %>
<% add.dialog 'Post Message to ' + @person.name, :partial => 'mails/new_form', :locals => {:users => [@user], :selected_users => [@user.id]} if permitted_to? :contact, @person %>
<% end %>