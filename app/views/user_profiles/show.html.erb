<% render_breadcrumbs do |add| %>
<% add.crumb_for @person %>
<% add.crumb 'Profile' %>
<% end %>

<% render_tabs do |t| %>
<% t.profile_tab :object => @user_profile %>
<% end %>

<% render_actions do |add| %>
<% add.dialog 'Change Password', {} if @user == current_user %>
<% add.dialog 'Post Message to ' + @person.name, :partial => 'mails/new_form', :locals => {:users => [@person.user], :selected_users => [@person.user.id]} if is_messageable?(@person) %>
<% end %>